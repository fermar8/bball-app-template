# AWS Configuration
aws_region = "eu-west-3"

# Bootstrap State Configuration
# This should point to the S3 bucket where bootstrap Terraform state is stored
bootstrap_state_bucket = "your-bootstrap-state-bucket-name"

# Function Configuration
function_name = "bball-app-template"
environment   = "nonlive" # or "live"

# Lambda Settings
timeout     = 30
memory_size = 128

# Logging
log_retention_days = 7

# Tags
tags = {
  Project   = "bball-app"
  ManagedBy = "terraform"
}
